<header>
    <div class="logo">
        <img src="images/Logo-removebg-preview.png" alt="logo"/>
    </div>
    <div class="search-container">
        <input type="text" placeholder="Search..."/>
        <button type="submit">
            <i class="fa fa-search"></i>
        </button>
    </div>
    <input type="checkbox" id="nav_check" hidden/>
    <nav>
        <div class="logo">
            <img src="images/Logo-removebg-preview.png" alt="Logo"/>
        </div>

        <ul>
            {% for nav in navigation %}
                <li>
                    <a href="{{ nav.href}}"
                       class="{% if nav.active == true %}active{% endif %}">
                       {% if nav.icon == true %}<i class="icon {{nav.icon }}"></i>{% endif %}
                    {{nav.title}}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </nav>
    <label for="nav_check" class="hamburger">
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
    </label>
</header>
